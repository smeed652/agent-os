{
  "name": "agent-os",
  "version": "2.2.1",
  "description": "Agent OS v2.0.0 - Advanced development framework with comprehensive testing, validation, and release automation for AI agent workflows",
  "main": "src/index.js",
  "bin": {
    "agent-os": "./scripts/agent-os-cli.js",
    "doc-version": "./scripts/document-versioner.js",
    "create-spec": "./scripts/create-spec.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:tdd": "jest --watch --notify",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "setup": "node scripts/setup.js",
    "teardown": "node scripts/teardown.js",
    "rebuild": "node scripts/rebuild.js",
    "validate": "npm run lint && npm run test:ci",
    "validate:tdd": "node scripts/tdd-validator.js",
    "create:tdd-project": "node scripts/create-tdd-project.js",
    "validate:agent-os": "npm run validate:all",
    "chaos": "node scripts/chaos-monkey.js",
    "chaos:quick": "timeout 35s node scripts/chaos-monkey.js",
    "chaos:security": "node scripts/security-chaos.js",
    "test:integration": "node scripts/test-integration.js",
    "test:integration:all": "node scripts/test-integration.js all",
    "test:integration:regular": "node scripts/test-integration.js regular",
    "test:integration:chaos": "node scripts/test-integration.js chaos",
    "test:integration:security": "node scripts/test-integration.js security",
    "test:comprehensive": "npm run test && npm run test:integration:all",
    "validate:all": "node scripts/test-all-validators.js",
    "doc:create": "node scripts/document-versioner.js create",
    "doc:update": "node scripts/document-versioner.js update",
    "doc:batch": "node scripts/document-versioner.js batch",
    "doc:version": "node scripts/document-versioner.js version",
    "create:spec": "node scripts/create-spec.js",
    "create:spec:full": "node scripts/comprehensive-spec-creator.js",
    "test:spec:system": "node scripts/test-comprehensive-spec-system.js",
    "dashboard:update": "node scripts/specs-dashboard-updater.js",
    "release": "node scripts/release.js",
    "release:quick": "node scripts/quick-release.js",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release",
    "release:beta": "npm version prerelease --preid=beta && npm run release",
    "release:alpha": "npm version prerelease --preid=alpha && npm run release",
    "release:rc": "npm version prerelease --preid=rc && npm run release",
    "release:hotfix": "npm run release:patch",
    "install:global": "npm install -g .",
    "uninstall:global": "npm uninstall -g agent-os"
  },
  "keywords": [
    "agent-os",
    "development-framework",
    "validation-suite",
    "testing-framework",
    "tdd",
    "ci-cd",
    "quality-assurance"
  ],
  "author": "Agent OS Development Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "glob": "^10.4.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.0.0",
    "commitlint": "^19.8.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "notify": true,
    "watchPathIgnorePatterns": [
      "node_modules",
      "coverage"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/agent-os.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/agent-os/issues"
  },
  "homepage": "https://github.com/your-username/agent-os#readme"
}
