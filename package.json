{
  "name": "test-project-hello-world",
  "version": "1.0.0",
  "description": "A comprehensive test project for validating the Agent OS validator suite and workflow",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "setup": "node scripts/setup.js",
    "teardown": "node scripts/teardown.js",
    "rebuild": "node scripts/rebuild.js",
    "validate": "npm run lint && npm run test:ci",
    "validate:agent-os": "cd ~/.agent-os && npm run validate:all",
    "chaos": "node scripts/chaos-monkey.js",
    "chaos:quick": "timeout 15s node scripts/chaos-monkey.js",
    "chaos:security": "node scripts/security-chaos.js",
    "test:integration": "node scripts/test-integration.js",
    "test:integration:all": "node scripts/test-integration.js all",
    "test:integration:regular": "node scripts/test-integration.js regular",
    "test:integration:chaos": "node scripts/test-integration.js chaos",
    "test:integration:security": "node scripts/test-integration.js security",
    "test:comprehensive": "npm run test && npm run test:integration:all"
  },
  "keywords": [
    "hello-world",
    "test-project",
    "agent-os",
    "validator-testing",
    "nodejs",
    "express",
    "testing"
  ],
  "author": "Agent OS Test Suite",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "local-test-project"
  },
  "bugs": {
    "url": "local-test-project/issues"
  },
  "homepage": "local-test-project#readme"
}
